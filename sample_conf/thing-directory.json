{
  "description": "LinkSmart Thing Directory",
  "dnssd": {
    "publish": false,
    "instance": "LinkSmart Thing Directory",
    "domain": "local."
  },
  "publicEndpoint": "http://fqdn-of-the-host:8081",
  "bindAddr": "0.0.0.0",
  "bindPort": 8081,
  "storage": {
    "type": "leveldb",
    "dsn": "./data"
  },
  "serviceCatalog": null,
  "auth": {
    "enabled": false,
    "provider": "keycloak",
    "providerURL": "https://provider-url",
    "clientID": "sampleTD",
    "basicEnabled": false,
    "authorization": {
      "enabled": true,
      "rules": [
        {
          "resources": ["/td"],
          "methods": ["GET","POST", "PUT", "DELETE"],
          "users": ["admin"],
          "groups": []
        },
        {
          "resources": ["/td"],
          "methods": ["GET"],
          "users": [],
          "groups": ["fit"]
        }
      ]
    }
  }
}
